    "version": "2.0.0",
 "tasks": [
    {
        "label": "buildC",
        "type": "shell",
        "command": "g++",
        "args": [
            "-g",
            "-Wall",
            "${fileBasename}",
            "-o",
            "${fileBasenameNoExtension}"
        ],
        "group": "build",
        "presentation": {
            "reveal": "silent"
        },
        "problemMatcher": "$gcc"
    },
    {
        "label": "Build And Run C ",
        "type": "shell",
        "command": "./${fileBasenameNoExtension}",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always"
        },
        "problemMatcher": "$gcc",
        "dependsOn": [
            "buildC"
        ]
    },
    {
        "label": "Compile for All",
        "type": "shell",
        "command": "g++",
        "args": [
            "-Wall",
